<%- include('layout') %>

<div class="md:w-4/5 mx-auto p-6 shadow-md rounded bg-white">
    <form action="/create" method="POST">
    <h2 class="font-bold text-4xl mb-4">New Post</h2>
    <input type="text" name="title" placeholder="Title" required class="w-full p-2 border border-teal-600 rounded mb-4">
    <input type="text" name="author" placeholder="Author Name" required class="w-full p-2 border border-teal-600 rounded mb-4">
    <textarea name="content" placeholder="Content" required class="w-full p-2 border border-teal-600 rounded mb-4 min-h-80"></textarea>

        <select name="category" id="category" required class="w-full p-2 border border-teal-600 rounded mb-4">
            <option value="" disabled selected>Select a category</option>
            <option value="Technology">Technology</option>
            <option value="Lifestyle">Lifestyle</option>
            <option value="Education">Education</option>
            <option value="Health">Health</option>
        </select>

    <div class="flex space-x-4">
        <button type="submit" class="w-full bg-teal-600 text-white p-2 rounded">Create</button>
    </div>
</form>
</div>